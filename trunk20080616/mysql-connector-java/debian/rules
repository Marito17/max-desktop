#!/usr/bin/make -f

# Some vars
VERSION=5.1.5
URL=http://dev.mysql.com/get/Downloads/Connector-J/mysql-connector-java-$(VERSION).tar.gz/from/http://mysql.rediris.es/

include /usr/share/cdbs/1/rules/debhelper.mk


build/mysql-connector-java::
	rm -rf tmp/
	mkdir tmp && cd tmp && wget $(URL)
	cd tmp && tar -zxf mysql-connector-java-$(VERSION).tar.gz

distclean:
	rm -rf tmp

install/mysql-connector-java::
	dh_link usr/share/mysql-connector-java/mysql-connector-java-5.1.5-bin.jar /usr/share/mysql-connector-java/mysql-connector-java.jar
