_echo "Instalando linux-image-generic"

chroot $CHROOT << EOC || _exit "No se ha podido instalar linux-image-generic"
export LC_ALL=C
export LC_MESSAGES=C
export DEBCONF_FRONTEND="noninteractive"
export DEBIAN_FRONTEND="noninteractive"
export UCF_FORCE_CONFFOLD=1
export ERROR=0
dpkg --configure -a
apt-get $APT_OPTS -f install
apt-get $APT_OPTS install $LIVE_PACKAGES || ERROR=1
apt-get $APT_OPTS install linux-image-generic || ERROR=1
apt-get clean
