
_echo "Configurando entorno live"

chroot $CHROOT << EOC || _exit "No se han podido instalar los paquetes para la versiÃ³n live"
export LC_ALL=C
export LC_MESSAGES=C
export DEBCONF_FRONTEND="noninteractive"
export DEBIAN_FRONTEND="noninteractive"
export ERROR=0
apt-get $APT_OPTS install maxmoodle-pressed || ERROR=1
apt-get $APT_OPTS install maxmoodle || ERROR=1
/etc/init.d/apache2 stop || true
/etc/init.d/mysql stop || true
apt-get $APT_OPTS install language-support-es || ERROR=1
apt-get $APT_OPTS install max-live || ERROR=1
apt-get $APT_OPTS autoremove
apt-get clean
exit \$ERROR
EOC
