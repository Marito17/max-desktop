
_echo "Configurando entorno live"

chroot $CHROOT << EOC || _exit "No se han podido instalar los paquetes para la versiÃ³n live"
export LC_ALL=C
export LC_MESSAGES=C
export DEBCONF_FRONTEND="noninteractive"
