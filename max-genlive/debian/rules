#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

build/max-genlive::
	if [ ! -f $(CURDIR)/gfxboot-build ]; then\
		cd gfxboot && make; \
		touch $(CURDIR)/gfxboot-build;\
	fi

clean/max-genlive::
	cd gfxboot && make clean
	rm -f $(CURDIR)/gfxboot-build

binary-install/max-genlive::
	install -d $(CURDIR)/debian/max-genlive/usr/share/max-genlive/isolinux
	install -m 644 gfxboot/install/bootlogo $(CURDIR)/debian/max-genlive/usr/share/max-genlive/isolinux
	install -m 644 gfxboot/install/es.tr $(CURDIR)/debian/max-genlive/usr/share/max-genlive/isolinux

	# clean svn dirs
	find $(CURDIR)/debian/max-genlive -type d -name .svn | xargs rm -rf --
