#!/usr/bin/make -f

# Some vars
VERSION=0.1.2.2
URL=http://clic.xtec.net/dist/jclic/jclic-$(VERSION).zip

include /usr/share/cdbs/1/rules/debhelper.mk

build/jclic::
	rm -rf jclic-$(VERSION)/ tmp/
	mkdir tmp && cd tmp && wget $(URL)
	unzip -o tmp/jclic-$(VERSION).zip
	rm -rf tmp

install/jclic::
	cp -ra jclic-$(VERSION)/* debian/jclic/usr/share/jclic
	mv debian/jclic/usr/share/jclic/*[TtXxTt] debian/jclic/usr/share/doc/jclic/
	
