<?xml version="1.0"?>
<interface>
  <requires lib="gtk+" version="2.16"/>
  <!-- interface-naming-policy toplevel-contextual -->
  <object class="GtkVBox" id="stepInstallType">
    <property name="visible">True</property>
    <property name="border_width">6</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel" id="install_heading_label">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="xalign">0</property>
        <property name="yalign">0.47999998927116394</property>
        <property name="label" translatable="yes">&lt;big&gt;&lt;b&gt;Seleccione el tipo de instalaci&#xF3;n&lt;/b&gt;&lt;/big&gt;</property>
        <property name="use_markup">True</property>
        <property name="selectable">True</property>
        <property name="single_line_mode">True</property>
        <attributes>
          <attribute name="weight" value="bold"/>
        </attributes>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">False</property>
        <property name="position">0</property>
      </packing>
    </child>
    <child>
      <object class="GtkHSeparator" id="hseparator20">
        <property name="visible">True</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">False</property>
        <property name="padding">6</property>
        <property name="position">1</property>
      </packing>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="install_scrolledwindow">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="hscrollbar_policy">never</property>
        <property name="vscrollbar_policy">never</property>
        <child>
          <object class="GtkViewport" id="viewport1">
            <property name="visible">True</property>
            <property name="resize_mode">queue</property>
            <property name="shadow_type">none</property>
            <child>
              <object class="GtkVBox" id="vbox13">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkVBox" id="install_vbox">
                    <property name="visible">True</property>
                    <property name="events">GDK_POINTER_MOTION_MASK | GDK_POINTER_MOTION_HINT_MASK | GDK_BUTTON_PRESS_MASK | GDK_BUTTON_RELEASE_MASK</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkRadioButton" id="install_type_group">
                        <property name="label" translatable="yes">hidden (no delete)</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="draw_indicator">True</property>
                      </object>
                      <packing>
                        <property name="position">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkRadioButton" id="install_type_escritorio">
                        <property name="label" translatable="yes">Escritorio</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Seleccione esta opci&#xF3;n para una instalaci&#xF3;n b&#xE1;sica con todas las aplicaciones educativas.</property>
                        <property name="active">True</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">install_type_group</property>
                      </object>
                      <packing>
                        <property name="position">1</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkRadioButton" id="install_type_alumno">
                        <property name="label" translatable="yes">Alumno</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Seleccione esta opci&#xF3;n para instalar max-tcos-alumno y poder ser controlado desde TcosMonitor.</property>
                        <property name="active">True</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">install_type_group</property>
                      </object>
                      <packing>
                        <property name="position">2</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkRadioButton" id="install_type_profesor">
                        <property name="label" translatable="yes">Profesor</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Seleccione esta opci&#xF3;n para instalar max-tcos-profesor y poder controlar el resto de equipos del aula desde TcosMonitor.</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">install_type_group</property>
                      </object>
                      <packing>
                        <property name="position">3</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkRadioButton" id="install_type_terminales">
                        <property name="label" translatable="yes">Servidor de terminales TCOS y Backharddi</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Seleccione esta opci&#xF3;n para instalar un servidor de terminales ligeros TCOS ya configurado y un servicio de clonado de discos duros BackHarddi</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">install_type_group</property>
                      </object>
                      <packing>
                        <property name="position">4</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkRadioButton" id="install_type_nanomax">
                        <property name="label" translatable="yes">Memoria USB (nanoMaX)</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Generar a partir de una memoria USB una nanoMaX</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">install_type_group</property>
                      </object>
                      <packing>
                        <property name="position">5</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="position">0</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkLabel" id="install_warn_nano">
                    <property name="label" translatable="yes">&lt;b&gt;Estas instalando desde la versi&#xF3;n CDROM o nanoMax, no se puede seleccionar el tipo de instalaci&#xF3;n.&lt;/b&gt;</property>
