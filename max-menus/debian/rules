#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
VERSION=$(shell dpkg-parsechangelog -ldebian/changelog| awk '/^Version/ {print $2}')


binary-install/max-menus::
	install -m 755 maxmenus.sh $(DESTDIR)/debian/max-menus/usr/sbin/maxmenus
	sed -i "s|__VERSION__|$VERSION|g" $(DESTDIR)/debian/max-menus/usr/sbin/maxmenus
	# clean svn dirs
	find $(CURDIR)/debian/max-menus -type d -name .svn | xargs rm -rf --
