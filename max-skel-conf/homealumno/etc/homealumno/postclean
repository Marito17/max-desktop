# comandos ejecutados despues de la limpieza

echo "homealumno: postclean configurando menus..."


echo "homealumno: deshabilitando compiz"
gconftool-2 --config-source xml:readwrite:$HOME/.gconf --type string \
	    --set /desktop/gnome/applications/window_manager/current "/usr/bin/metacity"

gconftool-2 --config-source xml:readwrite:$HOME/.gconf --type string \
	    --set /desktop/gnome/applications/window_manager/default "/usr/bin/metacity"

gconftool-2 --config-source xml:readwrite:$HOME/.gconf --type string \
	    --set /desktop/gnome/session/required_components/windowmanager "metacity"


#
# aqui se podría deshabilitar el menu de administración (que no se vea)
#

echo "homealumno: postclean acabado..."

