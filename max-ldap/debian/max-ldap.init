#!/bin/bash
# Start/stop the max-ldap hacks
#

. /lib/lsb/init-functions

DOMAIN_FILE=/var/lib/max-ldap/domain

case "$1" in
start)
        log_begin_msg "Starting MAX LDAP" "max-ldap"

		if [ ! -f $DOMAIN_FILE ]; then
			DOMAIN=$(smbtree -N 2>/dev/null | grep ^[a-zA-Z])
			[ -n "$DOMAIN" ] && echo "$DOMAIN" > $DOMAIN_FILE
		fi

        log_end_msg 0
        ;;
esac



exit 0

