#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

configure/javahotpot::
	if [ ! -d tmp ]; then mkdir tmp; fi

build/javahotpot::
	if [ ! -e tmp/javahotpot61.zip ]; then (cd tmp && wget http://hotpot.uvic.ca/javahotpot61.zip); fi
	if [ ! -d tmp/javahotpot ]; then (cd tmp && unzip -o javahotpot61.zip); fi

binary-install/javahotpot::
	# install shell script launcher
	install -m 755 javahotpot.sh debian/javahotpot/usr/bin/javahotpot
	find $(CURDIR)/debian/javahotpot -type d -name .svn | xargs rm -rf --

clean::
	rm -rf tmp
